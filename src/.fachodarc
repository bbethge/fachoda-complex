#
# Fachoda Complex configuration file.
#

#
# Key mapping
# To find out the SDL name of a key, use the `getkeyname' program
# that comes.with fachoda.
#

key_quit = Escape               # Quit
key_yes = Y                     # Yes
key_no = N                      # No
key_throttle_more = =           # Motor +5%
key_throttle_less = -           # Motor -5%
key_view_external = F5          # External views
key_view_still = F6             # Travelling view
key_view_internal = F4          # Internal views
key_zoom_out = F7               # Zoom out
key_zoom_in = F8                # Zoom in
key_view_next = F2              # View next plane
key_view_previous = F3          # View previous plane
key_view_self = F1              # View your plane or closest ennemy
key_view_map = F9               # Map mode
key_look_raise = Up             # Rise your head
key_look_lower = Down           # Lower your head
key_look_left = Left            # Turn left your head
key_look_right = Right          # Turn right your head
key_look_ahead = Home           # Look ahead
key_look_back = End             # Look backward
key_look_at_left = Delete       # Look at left
key_look_at_right = PageDown    # Look at right
key_look_up = PageUp            # Look up
key_look_panel = Insert         # Look at the instrument panel
key_gears = G                   # Gear
key_flaps = F                   # Flaps
key_brakes = B                  # Brakes
key_autopilot = P               # Autopilot
key_buy = F10                   # Buy a plane
key_pause = Pause               # Pause
key_scores = Tab                # See Highscores
key_acceleration = X            # Accelerated mode
key_navpoint_to_base = N        # Set navpoint to home base
key_suicide = F12               # Suicide
key_flag_map = C                # Flag the map at plane's position

# These keys are only used when in keyboard control

key_nose_down = Keypad 8        # Nose down
key_nose_up = Keypad 2          # Nose up
key_roll_left = Keypad 4        # Roll left
key_roll_right = Keypad 6       # Roll right
key_center_stick = Keypad 6     # Center stick
key_shoot = Space               # Fire
key_alt_weapon = Right Ctrl     # Change weapon

